{
  "name": "whatsapp-typescript-axios",
  "version": "1.2.1",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "prepare": "husky",
    "generate": "openapi-generator-cli generate",
    "changeset": "changeset",
    "ci:version": "changeset version",
    "ci:publish": "npm publish --access public",
    "release": "changeset publish",
    "postinstall": "npm run generate"
  },
  "author": "froggy1014",
  "license": "ISC",
  "description": "An OpenAPI generator tool for the WhatsApp Cloud API, designed to simplify API client generation and streamline integration workflows.",
  "keywords": [
    "whatsapp",
    "cloud api",
    "openapi",
    "axios",
    "typescript",
    "api generator",
    "whatsapp api",
    "whatsapp integration",
    "api client"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "typescript": "^5.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.1.0",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "axios": "^1.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.ts"
    }
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ]
}
